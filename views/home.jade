extends layout

block vars
   - var title = 'Home'

block content
   .row
      .col-md-3
         h2
            if user
               small Profile
               pre #{JSON.stringify(user, null, 2)}
            else
               | Not logged in

      .col-md-7
         .newpost
            if user
               h4 What's happening?
               form(method='post')
                  .form-group
                     textarea.form-control(rows='4' name='content')
                  input.btn.btn-primary(type='submit' value='Chirp!' formaction='/api/posts')
            else
               h4.text-center <a href="/auth/login">Log in</a> or <a href="/auth/signup">create a new account</a> and begin posting!
         
         include partials/postfeed
