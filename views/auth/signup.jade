extends ../layout

block vars
   - var title = 'Sign Up'

block content
   br
   .col-md-4
      .panel.panel-default
         .panel-heading
            h4.panel-title Create a new account
         form.panel-body(method='post')
            div.form-group
               label(for='username-input') Username
               input.form-control(type='text' id='username-input' name='username' placeholder='Username' required=true autofocus)
            div.form-group
               label(for='password-input') Password
               input.form-control(type='password' id='password-input' name='password' placeholder='Password' required=true)
            button.btn.btn-primary(type='submit')
               i.fa.fa-user-plus
               | Sign up
