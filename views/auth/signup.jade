extends ../layout

block vars
   - var title = 'Sign Up'

block content
      h2 Create a new account

      form(method='post')
         div.form-group
            label(for='username-input') Username
            input.form-control(type='text' id='username-input' name='username' placeholder='Username' required=true)
         div.form-group
            label(for='password-input') Password
            input.form-control(type='password' id='password-input' name='password' placeholder='Password' required=true)

         input.btn.btn-default(type='submit' value='Sign up')
